utils_check_architecture(){
    #case $($ARCHITECTURE) in
    case $(getconf LONG_BIT) in
		"32") echo "32-bits" ;;
		"64") echo "64-bits" ;;
		*) display_message_error_complex "" ;;
	esac
}

