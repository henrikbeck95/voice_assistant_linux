#label_must_be_tested
#label_must_be_fixed
math_sin(){
    local VALUE_NUMBER=$1

    #awk 'BEGIN{print "sin(-30 degree)="sin(-30*atan2(0,-1)/180)}'
    math_calc "sin($VALUE_NUMBER degree)"
}

