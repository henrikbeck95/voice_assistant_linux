    date '+%Y_%m_%d-%H_%M_%S' #2022_03_20-08_06_38
}

time_get_current_value_now_short(){
    date '+%H_%M_%S' #08_06_38
}

time_get_current_value_now_timestamp(){
    time_get_current_value_seconds_utc
}

